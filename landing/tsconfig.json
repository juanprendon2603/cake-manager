{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx", // <- runtime moderno
    "allowSyntheticDefaultImports": true, // <- evita el 1259
    "esModuleInterop": true, // <- ayuda con CJS interop
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src"]
}
